{
    "name": "Python 3",
    "image": "python:latest",
    "runArgs": [
        "--env-file",
        ".devcontainer/devcontainer.env"
    ],
    "postCreateCommand": "pip3 install poetry && poetry config virtualenvs.create false && poetry install --with dev,test,docs",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "njpwerner.autodocstring"
            ],
            "settings": {
                "autoDocstring.docstringFormat": "numpy",
                "editor.defaultFormatter": "ms-python.black-formatter",
                "editor.formatOnSave": true
            }
        }
    }
}